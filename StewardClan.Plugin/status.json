{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "status_effects": [
    {
      "id": "construct",
      "class_name": "@StatusEffectConstructState",
      "names": {
        "english": "Construct",
        "chinese": "构造体"
      },
      "stackable_names": {
        "english": "<nobr>Construct {0}</nobr>",
        "chinese": "<nobr>构造体 {0}</nobr>"
      },
      "card_tooltips": {
        "english": "Gives [codeint0] attack and health per stack at the end of turn.<br>Stacks remain across turns.<br>Stats gained don't persist on death.",
