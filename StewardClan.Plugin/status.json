      "trigger_stage": "on_post_room_combat",
      "is_stackable": true,
      "is_propagatable": true,
      "exclude_hero_propagation": true,
      "param_int": 1,
      "icon": "@ConstructIcon"
    }
  ],
  "sprites": [
    {
      "id": "ConstructIcon",
      "path": "textures/ConstructIcon.png"
    }
